                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <!-- Разметка кнопки MONITORING -->
                            <TextBlock  Text="MONITORING" Foreground="White" Grid.Column="2"/>
                            <Image Grid.Column="0" />
                        </Grid>
                    </Button.Content>
                </Button>
                <!--<TextBlock  Text="Monitoring" Foreground="White"/>-->


                <!-- 3 bt -->
                <Button  Grid.Row="2" Background="Blue">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <!-- Разметка кнопки REPORTING-->
                            <TextBlock  Text="  REPORTING" Foreground="White" Grid.Column="2" VerticalAlignment="Center"/>
                            
                            <Image Source="photo_2020-09-24_13-34-22.jpg" Height="20" Grid.Column="0"/>
                            

