                    </Button.Content>
                </Button>



                <!-- 4 bt-->
                <Button   Grid.Row="3" Background="Blue" >
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>

                            </Grid.ColumnDefinitions>

                            <!-- Разметка кнопки LOCATIONS-->
                            <TextBlock Grid.Column="2" Text="LOCATIONS" Foreground="White"/>
                            <Image Grid.Column="0"/>
                        </Grid>

                    </Button.Content>
                </Button>



                <!--5bt-->
                <Button Grid.Row="4" Background="Blue">
                    <Button.Content>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>

                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="3">
                                <TextBlock Text="LOGS" Foreground="White"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0">
                                <Image/>
